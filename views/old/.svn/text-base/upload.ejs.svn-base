<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<link rel='stylesheet' href='/vendor/bootstrap/css/bootstrap.css' />
	</head>
	<body>

			
		<div class="container">

			<div class="row">
				<div class="col-xs-2">
					<%- include nav %>
				</div>
				<div class="col-xs-10">
					<h1><%= title %></h1>
					<% if(error){ %>
						 <div class="alert alert-danger" role="alert"> <%= error%> </div>
					<% } %>
					<form class="form-horizontal" role="form" method="post" action="/upload" enctype="multipart/form-data" >
						<div class="form-group">
							<label for="" class="col-sm-2 control-label">图片</label>
							<div class="col-sm-10">
								<div class="checkbox">
									<input type="file" name="file1">
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-success">上传</button>
							</div>
						</div>
					</form>


					<div class="row">
						<ul class="list-group">
							<% images.forEach(function(image,index){ %>
								<li class="list-group-item ">
									<span class="pull-right ">
										<a href="/img_del?src=<%- image.src %>" class="btn btn-danger">删除</a>
									</span>
									<img src="<%- image.src %>" alt="<%- image.src %>" class="img-thumbnail pull-left" width="140">
									<p class="pull-left col-sm-offset-2">图片路径： <%- image.src %></p>
									<div class="clearfix"></div>
								</li>
							<% }) %>
						</ul>

					</div>



				</div>
			</div>

			



		</div>

	</body>
</html>