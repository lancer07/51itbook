<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<link rel='stylesheet' href='/vendor/bootstrap/css/bootstrap.css' />

		

		<script type="text/javascript" src="/vendor/kindeditor/kindeditor-min.js"></script>
		<script type="text/javascript" src="/vendor/kindeditor/lang/zh_CN.js"></script>



		
	</head>
	<body>

			
		<div class="container">

			<div class="row">
			<div class="col-xs-2">
					<%- include nav %>
			</div>
			<div class="col-xs-10">
					<h1><%= title %></h1>

					<form class="form-horizontal" role="form" method="post">
						<div class="form-group">
							<label for="" class="col-sm-2 control-label">标题</label>
							<div class="col-sm-10">
								<% if (articles){ %>
									<input type="text" class="form-control" name="article_tit" value="<%= articles[0].tit %>" />
								<% } else { %>
									<input type="text" class="form-control" name="article_tit" />
								<% } %>
							</div>
						</div>
						<div class="form-group">
							<label for="" class="col-sm-2 control-label">内容</label>
							<div class="col-sm-10">
								<textarea name="article_cot" style="height:300px" class="form-control"><% if (articles){ %><%- articles[0].cot %><% } %></textarea>

								<script type="text/javascript">
									var editor ;
									KindEditor.ready(function(K) {
										editor = K.create('textarea', {
											allowFileManager : true
										});
									});
								</script>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-success">发布</button>

								<a href="/article_list" class="btn btn-primary">返回</a>
							</div>
						</div>
					</form>
			</div>
		</div>
		</div>

	</body>
</html>